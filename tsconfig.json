{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "target": "es6",
        "module": "commonjs",
        "useDefineForClassFields": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "rootDir": "./js",
        "outDir": "./dist",
        "skipLibCheck": true,
        "lib": [
          "ES2021",
          "DOM",
          "DOM.Iterable",
        ]
    },
    "include": ["js/**/*"]
}